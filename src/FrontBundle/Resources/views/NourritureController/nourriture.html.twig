{% extends "base.html.twig" %}

{% block title %}Nourriture{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="col-sm-8">
                <h1>Mes nourritures</h1><br>
                <p>Construisez une liste de nourritures que vous mangez souvent. Recherchez, ajoutez et modifiez vos favoris.</p>
                <form class="form-inline">
                    <div class="form-group">
                        <select class="form-control">
                            <option selected>Tous nourritures</option>
                            {# block for categorie nourriture #}
                        </select>
                    </div>
                    <div class="form-group mx-sm-5">
                        <input class="form-control" placeholder="Recherche" name="recherche-nourriture" id="recherche-nourriture" type="text">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </form><br>

                <a class="btn btn-success ajouter-nourriture" href="/toGit/web/nourriture/ajouter" role="button">Ajouter nourriture</a>

                <table class="table">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Quantité</th>
                        <th scope="col">Calorie</th>
                        <th scope="col">Date dernière prise</th>
                    </tr>
                    </thead>
                    <tbody>
                    {# block for liste nourriture #}
                    <th scope="row">Poulet Rôti</th>
                    <td>200</td>
                    <td>356</td>
                    <td>13:48  (12 mars 2018)</td>
                    </tbody>
                </table>
            </div>

            <div class="col-sm-3">
                <div>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="button" class="btn btn-secondary">Voir Menus</button>
                        <button type="button" class="btn btn-secondary">Voir Recettes</button>
                    </div>

                    <h3>Chercher un diététiecien</h3>
                    <h4>Mon diététicien</h4>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
